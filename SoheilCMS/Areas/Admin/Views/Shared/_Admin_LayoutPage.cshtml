<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/Menu")
       
</head>
<body>
    <div>
        <div class="container-fulid">
            <div class="row">
                <div class="col-md-12">
                    <header id="header"></header>
                </div>
                <div class="col-xs-2 col-md-2 col-md-push-10">
                    <nav >
                        @{ Html.RenderAction("Menu","Home",new {Area="Admin"}); }
                    </nav>
                </div>
                <div class="col-xs-10 col-md-10 col-md-pull-2">
                    <div id="contentBody">
                        <div class="row">
                            <div class="col-xs-12 col-md-12 ">
                                @if (Model != null && (Model is SoheilCMS.Models.BaseViewModel))
                                {
                                    if (Model.State != SoheilCMS.Models.ActionState.None)
                                    {
                                        if (Model.State == SoheilCMS.Models.ActionState.Success)
                                        {
                                            <div class="alert alert-success text-center">@Model.Message</div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-Error text-center">@Model.Message</div>
                                        }
                                    }
                                }
                            </div>
                            @RenderBody()

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/Menu")
    @Scripts.Render("~/bundles/Admin")
        @RenderSection("script", false)
        
</body>
</html>

